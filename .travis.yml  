language: go
  go: - "1.14"

before_install:
  - sudo apt-get update
  - sudo apt-get -y install zip unzip wget
  - wget https://github.com/ninja-build/ninja/releases/download/v1.10.0/ninja-mac.zip
  - sudo unzip ninja-mac.zip -d /usr/local/bin/
  - sudo update-alternatives --install /usr/bin/ninja ninja /usr/local/bin/ninja 1 --force
script:
  - go get -u github.com/roman-mazur/bood/cmd/bood
  - cd build/
  - bood
  - rm -f build.bood
  - mv testBuild.bood build.bood
  - ./out/bin/bood
  - cp build.bood testBuild.bood
  - cp archiveBuild.bood build.bood
  - ./out/bin/bood